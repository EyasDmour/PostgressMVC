@model IEnumerable<PostMVC.Models.ProjectBoardViewModel>

@{
    ViewData["Title"] = "Task Board";
}

<div class="container-fluid">
    <h1 class="mb-4">Task Board</h1>
    
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-sm">
                    <div class="card-header bg-light d-flex justify-content-between align-items-center">
                        <div>
                            <h5 class="mb-0 text-primary d-inline">@item.Project.Name</h5>
                            <span class="badge bg-secondary ms-2">Priority: @item.Project.Priority</span>
                        </div>
                        @if (ViewBag.CurrentUserId == item.Project.OwnerId)
                        {
                            <form asp-controller="Projects" asp-action="Delete" asp-route-id="@item.Project.Id" method="post" onsubmit="return confirm('Are you sure you want to delete this project?');" class="d-inline">
                                <button type="submit" class="btn btn-danger btn-sm py-0 px-1" title="Delete Project">×</button>
                            </form>
                        }
                    </div>
                    <div class="card-body">
                        <p class="card-text text-muted small">@item.Project.Description</p>
                        <p class="card-text"><small class="text-muted">Due: @item.Project.EndDate.ToShortDateString()</small></p>
                        
                        @if (ViewBag.CurrentUserId == item.Project.OwnerId)
                        {
                            <form asp-controller="Projects" asp-action="AddMember" method="post" class="mb-3">
                                <input type="hidden" name="projectId" value="@item.Project.Id" />
                                <div class="input-group input-group-sm">
                                    <input type="text" name="username" class="form-control" placeholder="Add member by username" required />
                                    <button class="btn btn-outline-secondary" type="submit">Add</button>
                                </div>
                            </form>
                        }

                        <hr />
                        
                        <h6 class="card-subtitle mb-3 text-muted">Tasks</h6>
                        
                        @if (!item.Tasks.Any())
                        {
                            <p class="text-muted small font-italic">No tasks yet.</p>
                        }
                        else
                        {
                            <div class="d-flex flex-column gap-2">
                                @foreach (var task in item.Tasks)
                                {
                                    <div class="card border-start border-4 @(task.IsCompleted ? "border-success" : "border-warning")">
                                        <div class="card-body p-2">
                                            <div class="d-flex justify-content-between align-items-start">
                                                <h6 class="card-title mb-1">@task.Title</h6>
                                                <div class="d-flex gap-1">
                                                    <form asp-controller="Tasks" asp-action="ToggleComplete" asp-route-id="@task.Id" method="post">
                                                        <button type="submit" class="btn btn-sm @(task.IsCompleted ? "btn-success" : "btn-outline-secondary") py-0 px-1" style="font-size: 0.7em;">
                                                            @(task.IsCompleted ? "Done" : "Mark Done")
                                                        </button>
                                                    </form>
                                                    @if (ViewBag.CurrentUserId == item.Project.OwnerId)
                                                    {
                                                        <form asp-controller="Tasks" asp-action="Delete" asp-route-id="@task.Id" method="post" onsubmit="return confirm('Delete task?');">
                                                            <button type="submit" class="btn btn-danger btn-sm py-0 px-1" style="font-size: 0.7em;">×</button>
                                                        </form>
                                                    }
                                                </div>
                                            </div>
                                            <p class="card-text small mb-0 text-truncate">@task.Details</p>
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                    </div>
                    <div class="card-footer bg-white border-top-0">
                        <a asp-action="Create" asp-route-projectId="@item.Project.Id" class="btn btn-outline-primary btn-sm w-100">
                            + Add Task
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
    
    @if (!Model.Any())
    {
        <div class="alert alert-info">
            You don't have any projects yet. <a asp-controller="Projects" asp-action="Create">Create one</a> to get started!
        </div>
    }
</div>