@model IEnumerable<PostMVC.Models.Projects>

<h1 class="display-4">Projects</h1>
@if (Model == null || !Model.Any()){
<div class="alert alert-warning" role="alert">
    No projects found! <a asp-action="Create" class="btn btn-primary btn-sm ml-2">Create New Project</a>
</div>
} else {
<table class="table table-striped table-hover mt-4">
    <thead class="thead-light">
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Description</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Priority</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>

@foreach (var item in Model) {
        <tr>
            <td>
                @item.Id
            </td>
            <td>
                @item.Name
            </td>
            <td>
                @item.Description
            </td>
            <td>
                @item.StartDate
            </td>
            <td>
                @item.EndDate
            </td>
            <td>
                @item.Priority
            </td>
            <td>
                <a asp-controller="Tasks" asp-action="Create" asp-route-projectId="@item.Id" class="btn btn-sm btn-secondary">Add Task</a>
            </td>
        </tr>
    }

    </tbody>
</table>
    
}
